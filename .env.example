# Slack Configuration
SLACK_BOT_TOKEN=xoxb-your-bot-token
SLACK_SIGNING_SECRET=your-signing-secret
SLACK_APP_TOKEN=xapp-your-app-token

# Tencent Cloud SDK Configuration
# Get from: https://console.cloud.tencent.com/cam/capi
TENCENT_SECRET_ID=your-secret-id
TENCENT_SECRET_KEY=your-secret-key
TENCENT_REGION=ap-seoul

# Tencent Cloud API Endpoints (optional, uses defaults if not set)
TENCENT_MDC_ENDPOINT=mdc.tencentcloudapi.com
TENCENT_MDL_ENDPOINT=mdl.tencentcloudapi.com

# API Request Configuration
TENCENT_REQUEST_TIMEOUT=60
TENCENT_HTTP_PROXY=

# Server Configuration
PORT=3000  # Server port (webhook endpoints also use this port: https://your-server:3000/api/v1/webhooks/cloud-function)
DEBUG=True

# Allowed Slack Users (comma-separated Slack user IDs, empty = all users)
ALLOWED_USERS=

# Notification Settings
NOTIFICATION_CHANNEL=  # Slack channel ID for alerts (e.g., C1234567890)
ALERT_MONITOR_ENABLED=false  # Set true to enable periodic alert search (off until process is finalized)
ALERT_CHECK_INTERVAL_MINUTES=5  # Alert check interval (1-60 minutes, default: 5)
ALERT_MAX_AGE_HOURS=1  # Only notify for alerts within this many hours (0 = 24h; reduces "repeated old alerts")

# AI Assistant (Claude API) - Optional, for natural language queries in Slack
# Get API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=  # Leave empty to use fallback keyword matching
