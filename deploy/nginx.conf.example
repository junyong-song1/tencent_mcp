# Nginx configuration for Tencent MCP
# Place this file in /etc/nginx/sites-available/tencent-mcp
# Then create symlink: sudo ln -s /etc/nginx/sites-available/tencent-mcp /etc/nginx/sites-enabled/
# Reload nginx: sudo nginx -t && sudo systemctl reload nginx

server {
    listen 80;
    server_name your-domain.com;  # Change to your domain or IP

    # Logging
    access_log /var/log/nginx/tencent-mcp-access.log;
    error_log /var/log/nginx/tencent-mcp-error.log;

    # Increase body size for large requests
    client_max_body_size 10M;

    # Proxy to FastAPI application (running on port 8000)
    location / {
        proxy_pass http://127.0.0.1:8000;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        
        # WebSocket support (for Slack Socket Mode)
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
    }

    # Health check endpoint
    location /api/v1/health {
        proxy_pass http://127.0.0.1:8000;
        access_log off;
    }
}

